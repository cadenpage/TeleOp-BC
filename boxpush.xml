<mujoco model="boxpush">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.02"/>
    
    <default>
        <geom type="box" size="0.05 0.05 0.05" rgba="0.3 0.6 0.8 1"/>
        <joint damping="0.1"/>
    </default>

    <worldbody>
    #ground plane
        <geom name="ground" type="plane" size="5 5 0.1" pos="0 0 0" rgba="0.8 0.8 0.8 1"/>
    #box to push
        <body name="box" pos="0 0 0.05">
            <joint name="slider_x" type="slide" axis="1 0 0" limited="false"/>
            <geom name="box_geom" size="0.05 0.05 0.05" rgba="0.9 0.2 0.2 1"/>
        </body>

    #target marker
    <body name="target" pos="0 0 0.05">
        <geom name="target_geom" type="sphere" size="0.03" rgba="0.2 0.9 0.2 0.5"/>
    </body>

</worldbody>

<actuator>
    <motor name="box_motor" joint="slider_x" gear="1.0"/>
</actuator>

</mujoco>

